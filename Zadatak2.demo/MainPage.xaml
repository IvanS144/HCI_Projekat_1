    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="368*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="894*"/>
            <ColumnDefinition Width="781*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#FF575757" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,0,894,0"></Border>
        <Button x:Name="OdaberiSlike" Content="Select images" Margin="0,68,0,0" VerticalAlignment="Top" Height="40" Width="161" Click="OdaberiSlike_Clicked" Background="#FF0090BC" FontSize="20" Foreground="#E4F9EFEF" BorderBrush="White" BorderThickness="1" HorizontalAlignment="Center"/>
        <Button x:Name="PokreniObradu" Content="Run transformation" Margin="71,146,0,0" VerticalAlignment="Top" Height="41" Width="160" Click="PokreniObradu_Clicked"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" Grid.Column="2" Margin="5,5,-11,5" Grid.RowSpan="2">
            <StackPanel x:Name="AssignmentsStackPanel" Grid.Column="3" Spacing="10" >
                <StackPanel.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/Assets/P2.png"/>
                </StackPanel.Background>
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="CameraButton" Margin="71,270,0,0" VerticalAlignment="Top" Width="160" Height="32" Click="CameraButton_Clicked">
            <SymbolIcon Symbol="Camera"/>
        </Button>
        <Button x:Name="FotografisiButton" Content="Fotografisi" Margin="71,32,0,0" VerticalAlignment="Top" Width="160" IsEnabled="False" Click="FotografisiButton_Click" Height="33" Grid.Row="1"/>
        <ToggleSwitch x:Name="Kamera_switch" Header="Camera"  Margin="72,309,0,0" VerticalAlignment="Top" Width="154" Toggled="KameraToggled" Height="56" Foreground="White" Background="#FF0090BC"/>
        <Image x:Name="ImagePrewiev" HorizontalAlignment="Left" Height="266" Margin="3,106,0,0" VerticalAlignment="Top" Width="266" Grid.Row="1" Grid.ColumnSpan="2"/>
        <!--<Border Grid.Column="1" Margin="10,332,9,10">-->
        <!--<Border.Background>-->
        <!--<ImageBrush ImageSource="/Assets/P.png" Stretch="Uniform"/>-->
        <!--</Border.Background>-->
        <CaptureElement x:Name="PreviewControl" Grid.Column="1" Grid.Row="1" Margin="66,0,0,0"/>
