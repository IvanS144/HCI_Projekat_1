        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="0" VerticalScrollMode="Enabled" Margin="66,0,0,551" Grid.RowSpan="2">
            <StackPanel Name="SelectedStackPanel" Background="Black" BorderThickness="3" FocusVisualPrimaryBrush="{x:Null}"/>

        </ScrollViewer>
        <!--</UserControl>-->
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="15,15,0,0" Text="Your selection will apppear here" TextWrapping="Wrap" VerticalAlignment="Top" Width="582" Height="19"/>


    </Grid>
